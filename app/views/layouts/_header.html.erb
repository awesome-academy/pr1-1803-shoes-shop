<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Shoes Shop", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Trang chủ", root_path %></li>
        <% if !logged_in? %>
        <li><%= link_to "Đăng nhập", login_path %></li>
        <% end -%>
        <% if logged_in? %>
          <li><%= link_to "Tôi", "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Thông tin cá nhân", current_user %></li>
              <li><%= link_to "Cài đặt", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Đăng xuất", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% end -%>
      </ul>
    </nav>
  </div>
</header>
