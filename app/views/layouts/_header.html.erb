<header>
  <div class="header-area">
    <div class="header-top-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="header-top-left">
              <ul>
                <li>
                  <i class="fa fa-phone" aria-hidden="true"></i>
                  <%= link_to "123 456 78910", "tel:123 456 78910" %>
                </li>
                <li>
                  <i class="fa fa-envelope" aria-hidden="true"></i>
                  <%= link_to "info@gmail.com", "mailto:info@gmail.com" %>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="header-top-right">
              <ul>
                <% if !logged_in? %>
                  <li>
                    <%= link_to "Đăng nhập", login_path, class: "login" %>
                    <%= link_to "Singup", signup_path %>
                  </li>
                <% end %>
                <% if logged_in? %>
                  <li>
                    <%= link_to "Tôi", current_user %>
                  </li>
                  <li>
                    <%= link_to "Đăng xuất", logout_path, method: :delete %>
                  </li>
                  <%if current_user.admin?%>
                    <li>
                      <%= link_to "PageAdmin", admin_root_path %>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="header-bottom-area" id="sticker">
      <div class="container">
       <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
            <div class="logo-area">
              <%= link_to root_path do  %>
              <%= image_tag "logo.png" %>
              <% end %>
            </div>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
            <div class="main-menu-area">
              <nav>
                <ul>
                  <li class="active">
                    <%= link_to "Home", "#" %>
                  </li>
                  <li>
                    <%= link_to "About", "#" %>
                  </li>
                  <li>
                    <%= link_to "Shop shoes", "#" %>
                    <ul>
                      <% Category.all.each do |category| %>
                      <li>
                        <%= link_to category.name %>
                      </li>
                      <% end %>
                    </ul>
                  </li>
                  <li>
                    <%= link_to "Page", "#" %>
                    <ul>
                        <li><%= link_to "Blog", "#" %></li>
                        <li><%= link_to "Single", "#" %></li>
                    </ul>
                  </li>
                  <li>
                    <%= link_to "News", "#" %>
                  </li>
                  <li>
                    <%= link_to "Contact", "#" %>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
            <ul class="header-cart-area">
              <li class="header-search">
                <form>
                  <input type="text" class="search-form" placeholder="Search...." required="">
                  <a href="#" class="search-button" id="search-button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                 </a>
                </form>
              </li>
              <li>
                <div class="cart-area">
                  <%= link_to "#" do %>
                    <i aria-hidden="true" class="fa fa-shopping-cart"></i>
                    <span>2</span>
                  <% end %>
                  <ul>
                    <li>
                      <div class="cart-single-product">
                        <div class="media">
                          <div class="pull-left cart-product-img">
                            <%= link_to "#" do %>
                              <%= image_tag "cart/image-cart1.jpg", class: "img-responsive" %>
                            <% end %>
                          </div>
                          <div class="media-body cart-content">
                            <ul>
                              <li>
                                <h1>
                                  <%= link_to "Lunch Menu", "#" %>
                                </h1>
                                <p>
                                  <span>Code:</span> STPT600
                                </p>
                              </li>
                              <li>
                                <p>X 1</p>
                              </li>
                              <li>
                                <p>$49</p>
                              </li>
                             <li>
                                <%= link_to "#", class: "trash" do %>
                                  <i class="fa fa-trash-o"></i>
                                <% end %>
                             </li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </li>
                    <li>
                      <div class="cart-single-product">
                        <div class="media">
                          <div class="pull-left cart-product-img">
                            <%= link_to "#" do %>
                              <%= image_tag "cart/image-cart2.jpg", class: "img-responsive" %>
                            <% end %>
                          </div>
                          <div class="media-body cart-content">
                            <ul>
                              <li>
                                <h1>
                                  <%= link_to "Dinner Menu", "#" %>
                                </h1>
                                <p>
                                  <span>Code:</span> STPT460
                                </p>
                              </li>
                              <li>
                               <p>X 1</p>
                              </li>
                              <li>
                               <p>$75</p>
                              </li>
                              <li>
                                <%= link_to "#", class: "trash" do %>
                                  <i class="fa fa-trash-o"></i>
                                <% end %>
                              </li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </li>
                    <li>
                      <span>
                        <span>Sub Total</span>
                      </span>
                      <span>$124</span>
                      <span>
                        <span>Discount</span>
                      </span>
                      <span>$30</span>
                      <span>
                        <span>Vat(20%)</span>
                      </span>
                      <span>$18.8</span>
                      <span>
                        <span>Sub Total</span>
                      </span>
                      <span>$112.8</span>
                    </li>
                    <li>
                      <ul class="checkout">
                        <li>
                          <%= link_to "View Cart", "#", class: "default-btn" %>
                        </li>
                        <li>
                          <%= link_to "Checkout", "#", class: "default-btn"  %>
                        </li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
